{
    "vars": {
        "id": "secondary.kdc",
        "services": [ "attester", "kdcsvc", "webapi", "kdcsvc_TGS",
                        "kdcsvc_iprop_secondary" ],
        "default_targets": [ "start-attester", "setup-global", "setup-local",
                            "start-services" ],
        "client_global": false,
        "kdcsvc_dir": "/kdc_secondary",
        "kdcsvc_mode": "secondary",
	"kdcsvc_policyurl": "http://policy.secondary.kdc.hcphacking.xyz:9280",
        "kdcsvc_primary": "primary.kdc.hcphacking.xyz",
	"kdcsvc_TGS_port": "3088",
        "policy_url": "http://policy.secondary.kdc.hcphacking.xyz:9280",
        "policysvc_port": 9280,
        "policysvc_config": "/usecase/kdc_secondary.policy.json",
        "webapi_app": "/hcp/kdcsvc/mgmt_api.py",
        "webapi_fqdn": "secondary.kdc.hcphacking.xyz",
        "webapi_port": 9190,
        "webapi_setup": { "touchfile": "/etc/hcp/secondary.kdc/touch-kdcsvc-local-setup" }
    },
    "args_for": "kdcsvc_TGS",

    "scope": [
        { "load": ".defaults", "path": "/usecase/proto_defaults.json" },
        { "vars": ".defaults" },
        { "import": ".", "source": "." },
        { "vars": ".vars" },
        { "loadunion": ".", "path": "/usecase/proto_root.json" },
        { "load": ".attester", "path": "/usecase/proto_attester.json" },
        { "load": ".client", "path": "/usecase/proto_client.json" },
        { "load": ".kdcsvc", "path": "/usecase/proto_kdcsvc.json" },
        { "load": ".kdcsvc_TGS", "path": "/usecase/proto_kdcsvc_TGS.json" },
        { "load": ".kdcsvc_iprop_secondary", "path": "/usecase/proto_kdcsvc_iprop_secondary.json" },
        { "load": ".policysvc", "path": "/usecase/proto_policysvc_sidecar.json" },
        { "load": ".webapi", "path": "/usecase/proto_webapi.json" },
        { "delete": ".webapi.https" },
        { "load": ".tpm", "path": "/usecase/proto_tpm_sidecar.json" }
    ],

    "env": {
        "set": { "KRB5_CONFIG": "/etc/hcp/secondary.kdc/krb5.conf" }
    }
}
