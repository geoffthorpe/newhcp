{
    "vars": {
        "id": "enrollsvc",
        "services": [ "createdb", "webapi" ],
        "default_targets": [ "setup-createdb", "start-services" ],
        "webapi_app": "/hcp/backend/enrollsvc.py",
        "webapi_fqdn": "enrollsvc.hcphacking.xyz",
        "webapi_port": 443,
        "webapi_https_authentication": "clientcert",
        "webapi_https_certificate": "/cred_enrollsvc",
	"webapi_https_client_CA": "/ca_enrollsvc"
    },
    "args_for": "enrollsvc",

    "scope": [
        { "load": ".defaults", "path": "/usecase/proto/defaults.json" },
        { "vars": ".defaults" },
        { "import": ".", "source": "." },
        { "vars": ".vars" },
        { "loadunion": ".", "path": "/usecase/proto/root.json" },
        { "load": ".webapi", "path": "/usecase/proto/webapi.json" }
    ],

    "createdb": {
        "setup": [ {
                "tag": "createdb",
                "exec": [ "bash", "-c",
                    "mkdir -p /backend/db && chown -R www-data /backend/db && touch /backend/.db-created" ],
                "touchfile": "/backend/.db-created"
        } ]
    }
}
